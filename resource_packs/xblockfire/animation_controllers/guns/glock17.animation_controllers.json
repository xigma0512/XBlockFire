{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.item.fpp_glock17": {
            "initial_state": "fpp_default",
            "states": {
                "fpp_default": {
                    "transitions": [
                        {
                            "draw": "1"
                        }
                    ]
                },
                "draw": {
                    "animations": [
                        "draw"
                    ],
                    "transitions": [
                        {
                            "hold": "q.all_animations_finished"
                        }
                    ]
                },
                "hold": {
                    "animations": [
                        "fpp_hold"
                    ],
                    "transitions": [
                        {
                            "reload": "c.owning_entity->q.property('player:is_reloading')"
                        }
                    ]
                },
                "reload": {
                    "animations": [
                        "reload"
                    ],
                    "transitions": [
                        {
                            "hold": "q.all_animations_finished"
                        }
                    ]
                },
                "reloadempty": {
                    "animations": [
                        "reloadempty"
                    ],
                    "transitions": [
                        {
                            "hold": "q.all_animations_finished"
                        }
                    ]
                },
                "inspect": {
                    "animations": [
                        "inspect"
                    ],
                    "transitions": [
                        {
                            "hold": "q.all_animations_finished"
                        }
                    ]
                }
            }
        },
        "controller.animation.item.tpp_glock17": {
            "initial_state": "tpp_default",
            "states": {
                "tpp_default": {
                    "transitions": [
                        { 
                            "hold": "1"
                        }
                    ]
                },
                "hold": {
                    "animations": [
                        "tpp_hold"
                    ]
                }
            }
        }
    }
}