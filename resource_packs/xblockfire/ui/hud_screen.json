{
    "namespace": "hud",
    "hud_title_text@custombar": {
        "type": "panel",
        "size": [
            "default",
            "default"
        ],
        "controls": [
            {
                "subtitle": {
                    "type": "label",
                    "anchor_from": "center",
                    "anchor_to": "center",
                    "offset": [
                        0,
                        "15%"
                    ],
                    "color": "$title_command_text_color",
                    "text": "$subtitle_text",
                    "localize": false,
                    "font_size": "large",
                    "shadow": true,
                    "size": [
                        "100%",
                        "default"
                    ],
                    "text_alignment": "center"
                }
            },
            {
                "sidebar": {
                    "type": "image",
                    "size": [
                        "100%cm+5px",
                        "100%c+5px"
                    ],
                    "texture": "textures/ui/hud_tip_text_background",
                    "anchor_from": "right_middle",
                    "anchor_to": "right_middle",
                    "layer": 0,
                    "alpha": 0.5,
                    "controls": [
                        {
                            "text": {
                                "type": "label",
                                "text": "$title_text",
                                "anchor_from": "center",
                                "anchor_to": "center",
                                "color": "$tool_tip_text",
                                "layer": 31,
                                "text_alignment": "left"
                            }
                        }
                    ]
                }
            }
        ]
    }
}