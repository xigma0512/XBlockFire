{
    "format_version": "1.21.0",
    "minecraft:entity": {
        "description": {
            "identifier": "minecraft:player",
            "spawn_category": "creature",
            "is_spawnable": false,
            "is_summonable": false,
            "scripts": {
                "animate": [
                    "reload_controller",
                    "movement_controller"
                ]
            },
            "animations": {
                "reload_controller": "controller.animation.player.reload",            
                "movement_controller": "controller.animation.player.movement"            
            },
            "properties": {
                "player:is_reloading": {
                    "client_sync": true,
                    "type": "bool",
                    "default": false
                },
                "player:is_moving": {
                    "client_sync": true,
                    "type": "bool",
                    "default": false
                }
            }
        },
        "component_groups": {
            "throwing_smoke_grenade": {
                "minecraft:spawn_entity": {
                    "entities": [
                        {
                            "filters": [
                                {
                                    "test": "is_sneaking",
                                    "operator": "==",
                                    "value": false
                                }
                            ],
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "single_use": true,
                            "spawn_entity": "xblockfire:smoke_grenade",
                            "spawn_event": "set_overhand",
                            "num_to_spawn": 1
                        },
                        {
                            "filters": [
                                {
                                    "test": "is_sneaking",
                                    "operator": "==",
                                    "value": true
                                }
                            ],
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "single_use": true,
                            "spawn_entity": "xblockfire:smoke_grenade",
                            "spawn_event": "set_underhand",
                            "num_to_spawn": 1
                        }
                    ]
                }
            },
            "throwing_flashbang": {
                "minecraft:spawn_entity": {
                    "entities": [
                        {
                            "filters": [
                                {
                                    "test": "is_sneaking",
                                    "operator": "==",
                                    "value": false
                                }
                            ],
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "single_use": true,
                            "spawn_entity": "xblockfire:flashbang",
                            "spawn_event": "set_overhand",
                            "num_to_spawn": 1
                        },
                        {
                            "filters": [
                                {
                                    "test": "is_sneaking",
                                    "operator": "==",
                                    "value": true
                                }
                            ],
                            "min_wait_time": 0,
                            "max_wait_time": 0,
                            "single_use": true,
                            "spawn_entity": "xblockfire:flashbang",
                            "spawn_event": "set_underhand",
                            "num_to_spawn": 1
                        }
                    ]
                }
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "player"
                ]
            },
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 1.8
            },
            "minecraft:can_climb": {},
            "minecraft:attack": {
                "damage": 0
            },
            "minecraft:nameable": {
                "always_show": false,
                "allow_name_tag_renaming": false
            },
            "minecraft:physics": {
                "push_towards_closest_space": true
            },
            "minecraft:pushable": {
                "is_pushable": false,
                "is_pushable_by_piston": true
            },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:block_climber": {}
        },
        "events": {
            "throwing_smoke_grenade": {
                "add": {
                    "component_groups": [
                        "throwing_smoke_grenade"
                    ]
                },
                "queue_command": {
                    "command": [
                        "clear @s xblockfire:smoke_grenade_item 0 1"
                    ]
                }
            },
            "throwing_flashbang": {
                "add": {
                    "component_groups": [
                        "throwing_flashbang"
                    ]
                },
                "queue_command": {
                    "command": [
                        "clear @s xblockfire:flashbang_item 0 1"
                    ]
                }
            },
            "add_reloading": {
                "set_property": {
                    "player:is_reloading": true
                }
            },
            "remove_reloading": {
                "set_property": {
                    "player:is_reloading": false
                }
            },
            "add_moving": {
                "set_property": {
                    "player:is_moving": true
                }
            },
            "remove_moving": {
                "set_property": {
                    "player:is_moving": false
                }
            }
        }
    }
}