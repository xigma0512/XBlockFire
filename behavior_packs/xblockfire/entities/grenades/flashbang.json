{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "xblockfire:flashbang",
			"is_spawnable": false,
			"is_summonable": true,
			"is_experimental": false,
			"runtime_identifier": "snowball",
            "properties": {
                "grenade:throwing_type": {
                    "client_sync": true,
                    "type": "int",
                    "range": [0, 2],
                    "default": 0
                },
                "grenade:type": {
                    "client_sync": true,
                    "type": "int",
                    "range": [0, 1],
                    "default": 0
                }
            }
		},
        "component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {}
            },
            "overhand_throw": {
                "minecraft:projectile": {
                    "on_hit": {
                        "stick_in_ground": {
                            "shack_time": 0.1
                        }
                    },
                    "ignored_entities": [
                        "player"
                    ],
                    "anchor": 1,
                    "power": 1.2,
                    "gravity": 0.08,
                    "inertia": 1,
                    "liquid_inertia": 1,
                    "offset": [0, -0.1, 0]
                }
            },
            "underhand_throw": {
                "minecraft:projectile": {
                    "on_hit": {
                        "stick_in_ground": {
                            "shack_time": 0.1
                        }
                    },
                    "ignored_entities": [
                        "player"
                    ],
                    "anchor": 1,
                    "power": 0.5,
                    "gravity": 0.08,
                    "inertia": 1,
                    "liquid_inertia": 1,
                    "offset": [0, -0.1, 0]
                }
            }
        },
		"components": {
            "minecraft:type_family": {
                "family": [
                    "projectile",
                    "grenade",
                    "flashbang"
                ]
            },
			"minecraft:collision_box": {
				"width": 0.2,
				"height": 0.2
			},
            "minecraft:scale": {
                "value": 0.25
            },
			"minecraft:physics": {},
			"minecraft:conditional_bandwidth_optimization": {
				"default_values": {
					"max_optimized_distance": 100,
					"max_dropped_ticks": 7,
					"use_motion_prediction_hints": true
				}
			},
            "minecraft:timer": {
                "time": 5,
                "looping": true,
                "time_down_event": {
                    "event": "despawn"
                }
            }
		},
        "events": {
            "despawn": {
                "add": {
                    "component_groups": [
                        "despawn"
                    ]
                }
            },
            "set_overhand": {
                "add": {
                    "component_groups": [
                        "overhand_throw"
                    ]
                },
                "set_property": {
                    "grenade:throwing_type": 0
                }
            },
            "set_underhand": {
                "add": {
                    "component_groups": [
                        "underhand_throw"
                    ]
                },
                "set_property": {
                    "grenade:throwing_type": 1
                }
            },
            "explode_sound": {
                "queue_command": {
                    "command": [
                        "playsound xblockfire.flash_explode @a ~~~ 5 1"
                    ]
                }
            },
            "throwing_sound": {
                "queue_command": {
                    "command": [
                        "playsound xblockfire.throwing_flash @a ~~~ 1 1"
                    ]
                }
            }
        }
	}
}